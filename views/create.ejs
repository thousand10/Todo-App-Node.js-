<%- include("layouts/head.ejs") %>
<%- include("layouts/navigation.ejs") %>

<div class="container mx-auto py-20 px-6">
    <div class="max-w-xl mx-auto">
        <h1 class="text-center font-sans text-2xl md:text-4xl mb-4">Add a todo</h1>
        <form action="/todo/store" method="POST">
            <div class="py-2">
                <label class="font-sans text-lg capitalize">Title</label>
                <input type="text" name="title" class="py-3 bg-gray-200 w-full px-3 shadow-lg outline-none">
            </div>
            <div class="py-2 mb-3">
                <label class="font-sans text-lg capitalize">Description</label>
                <textarea name="description" id="" class="py-2 bg-gray-200 px-3 w-full shadow-lg outline-none" cols="30" rows="10"></textarea>
            </div>
            <input type="submit" value="add" class="font-sans w-full text-lg py-2 capitalize px-10 bg-green-500 transition ease-in-out duration-200 hover:bg-green-400 outline-none">
        </form>
    </div>
</div>

<%- include("layouts/scripts") -%>