<%- include("layouts/head.ejs") %>
<%- include("layouts/navigation.ejs") %>


<div class="container mx-auto py-20 px-6">
    <div class="max-w-xl mx-auto">
        <h1 class="font-sans pb-3 text-2xl md:text-4xl tracking-wide">Update</h1>
        <form action="/update/save" method="POST">
            <div class="py-2">
                <label class="font-sans text-lg capitalize">Title</label>
                <input type="text" name="title" value="<%= Todo.title %>" class="py-3 bg-gray-200 w-full px-3 shadow-lg outline-none">
            </div>
            <div class="py-2 mb-3">
                <label class="font-sans text-lg capitalize">Description</label>
                <textarea name="description" id=""  class="py-2 bg-gray-200 px-3 w-full shadow-lg outline-none" cols="30" rows="10"> <%= Todo.description %> </textarea>
            </div>
            <input type="submit" value="Update" class="font-sans w-full text-lg py-2 capitalize px-10 bg-blue-500 transition ease-in-out duration-200 hover:bg-blue-400 text-white outline-none">
        </form>
    </div>
</div>

<%- include("layouts/scripts") -%>